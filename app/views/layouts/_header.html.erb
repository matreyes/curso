<div class="topbar">
	<div class="fill">
		<div class="container">
			<%= link_to "Pasa", root_path, class: 'brand' %>
			<ul class="nav">
				<% if current_user%>
					<% @levels.each do |level| %>
						<% if level.id <= current_user.current_level %>
							<% if level == @level %>
							<li class="active"><%= link_to level.name, level %></li>
							<% else %>
							<li><%= link_to level.name, level %></li>
							<% end %>
						<% end %>
					<% end %>
				<% end %>
			</ul>
			<% if user_signed_in? %>
				<div class="pull-right logged">
					<%= current_user.email %> <%= link_to "Salir", destroy_user_session_path, :method => :delete %>
				</div>
			<% else %>
				<%= form_for "user", :url => user_session_path, :html => { class: "pull-right" } do |f| %>
				  <%= f.email_field :email, class: "input-small", placeholder: "email" %>
				  <%= f.password_field :password, class: "input-small", placeholder: "contraseÃ±a" %>
					<%= button_tag "Ingresar", class: "btn" %>
				<% end %>
			<% end %>
			
		</div>
	</div>
</div>