<!-- This modal is called from the ajax request -->

<div id="quiz-sent-modal" class="modal hide fade">
	<div class="modal-header">
		<a href="#" class="close">x</a>
		<h3>Respuesta enviada</h3>
	</div>
	<div class="modal-body">
		<p>Pronto revisaremos su respuesta.</p>
	</div>
	<% if @next_quiz %>
	<div class="modal-footer">
		<%= link_to "Siguiente", level_quiz_path(@level, @next_quiz), class: "btn primary" %>
	</div>
	<% end %>
</div>

<!-- End of modal -->