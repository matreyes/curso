<div class="page-header">
	<div class="row">
	<div class="span10">
		<h1>Ejecución de Unidades de Aprendizaje <br><small>Metodología de Casos de Aprendizaje</small></h1>
	</div>
		<% if !current_user %>
			<div class="pull-right">
				<%= link_to "¿Olvidó su contraseña?", new_user_password_path %><br>
				<%= link_to "¿Usuario nuevo?", new_user_registration_path, class: "label important" %>
			</div>
		<% end %>
	
			<%= render 'shared/tutor_block' %>
	</div>
</div>

<div class="central-content">
	<div class="row">

		<div class="span10 left-content">
			
			<% if current_user %>
				
				<%= render "timeline" %>
				<br>
				
				<% if current_user.current_level > 0 %>
					<%= link_to "Continuar", level_path(current_user.current_level), 
						class: "btn danger large span9" %>
				<% else %>
				  	<%= link_to "Comenzar", level_path(1), class: "btn danger large span9"%>
				<% end %>

			<br><br><br>
			<% else %>

			<h2>Introducción</h2>
			<br>
				<iframe src="http://player.vimeo.com/video/5239013?title=0&amp;byline=0&amp;portrait=0" width="550" height="310" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
			<br>
			<br>
			
			<% end %>
		</div>

		<div class="span4 side">
			<h2>Recursos</h2><br>
			<table class="stuff">
				<% if current_user %>
					<tr><td><%= image_tag 'groups.png' %></td>
					<td><h5><%= link_to 'Foros', topics_path %></h5></td></tr>
				<% end %>
				<tr><td><%= image_tag 'suitcase.png' %></td><td><h5>Unidad de aprendizaje</h5></td></tr>
				<tr><td><%= image_tag 'presentation.png' %></td><td><h5>Diapositivas</h5></td></tr>
			</table>	

			<br><br><br>
		</div>
		
	</div>
</div>
