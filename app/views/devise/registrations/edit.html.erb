<br>
<h2>Editar Usuario</h2>
<br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :multipart => true) do |f| %>
  <% if devise_error_messages! != "" %>
		<div class="alert-message block-message error span9">
			<%= devise_error_messages! %>
		</div>
	<% end %>
<br>

<div>
  <%= f.label :passport %>
  <%= f.text_field :passport %>
</div>
<br>

<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<br>

<div>
  <%= f.label :surname %>
  <%= f.text_field :surname %>
</div>
<br>
<div><%= f.label :email %>
  <%= f.email_field :email %></div>
<br>
  <div><%= f.label :current_password, "ContraseÃ±a actual *" %>
  <%= f.password_field :current_password %></div>
<br>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>
  <br>
  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>
<br><br>

	<div>
		<%= image_tag current_user.avatar.thumb.url, width: 50 %>
		<%= f.label :avatar, "Cambiar imagen" %>
		<%= f.file_field :avatar, class: "span6" %>	
	</div>
	<br>


<br>
  <div><%= f.submit "Actualizar", class: "btn primary" %></div>
<% end %>

<%= link_to "Back", :back %>
